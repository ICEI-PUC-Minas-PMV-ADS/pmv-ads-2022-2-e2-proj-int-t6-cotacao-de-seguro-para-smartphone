@using SeguroCelular.Mvc.Models.Enums
@model SeguroCelular.Mvc.Models.CotacaoSeguro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Edite sua cotação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ModeloCelular" class="control-label"></label>
                <input asp-for="ModeloCelular" class="form-control" />
                <span asp-validation-for="ModeloCelular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planos" class="control-label"></label>
                <select asp-for="Planos" class="form-control" asp-items="Html.GetEnumSelectList<EPlanos>()"></select>
                <span asp-validation-for="Planos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <select asp-for="Valor" class="form-control" asp-items="Html.GetEnumSelectList<EValoresCelular>()"></select>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

